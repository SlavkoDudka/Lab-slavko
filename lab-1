#include <math.h> 
#include <stdio.h>

int main() {
	float x1, x2, x3, y1, y2, y3;
	printf("Enter the coordinates of the first point\n");
	scanf_s("%f", &x1);
	scanf_s("%f", &y1);
	printf("Enter the coordinates of the second point\n");
	scanf_s("%f", &x2);
	scanf_s("%f", &y2);
	printf("Enter the coordinates of the third point\n");
	scanf_s("%f", &x3);
	scanf_s("%f", &y3);
	float ax =x1-x2, ay=y1-y2, bx=x2-x3, by=y2-y3, cx=x3-x1, cy=y3-y1;
	float a = sqrt(ax * ax + ay * ay);

	float b = sqrt(bx * bx + by * by);

	float c = sqrt(cx * cx + cy * cy);
	float S, P,p;
	P = a + b + c;

	p = P / 2;

	S = sqrt(p * (p - a) * (p - b) * (p - c));
	printf("The area is flat %.1f\n", S);
	printf("The perimeter is equal %.1f\n", P);
	return 0;
}
